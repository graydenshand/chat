{{!-- Sign up form --}}
<form id='signup' {{action "signUp" on="submit"}}>
	{{#if this.errorMessage}}
	<p>{{this.errorMessage}}</p>
	{{/if}}

	<div class="form-group">
		<label for="name">Name</label>
		{{input id='name' placeholder='Tony Stark' value=this.name class="form-control"}}
	</div>
	<div class="form-group">
		<label for="email">Email</label>
		<Input id='email' placeholder='tstark@starkindustries.com' @value={{this.email}} class="form-control" @change={{this.validateEmail}}/>
	</div>
	<div class="form-group">
		<label for="password">Password</label>
		<Input id='password' placeholder='Enter Password' type='password' @value={{this.password}} class="form-control"/>
		<small class='form-text'>Password must be at least 8 characters long, and contain at least one number and capital letter.</small>
	</div>
	<div class="form-group">
		<label for="password2">Retype Password</label>
		{{input id='password2' placeholder='Enter Password' type='password' value=this.password2 class="form-control"}}
	</div>
	<BsButton type="submit" @type="primary">Login</BsButton>
</form>

{{yield}}