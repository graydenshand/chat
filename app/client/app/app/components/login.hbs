{{!-- Login/Signup component --}}
<p><a href="#" {{on "click" this.toggleMode}}>
	{{#if this.loginMode }}
	Sign up
	{{else}}
	Log in
	{{/if}}
</a></p>

{{#if this.loginMode }}

{{!-- Log in form --}}
<form id='login' {{action 'authenticate' on='submit'}}>
	{{#if this.errorMessage}}
	<p>{{this.errorMessage}}</p>
	{{/if}}
	<div class="form-group">
		<label for="email">Email</label>
		{{input id='email' placeholder='Enter Login' value=this.email class="form-control"}}
	</div>
	<div class="form-group">
		<label for="password">Password</label>
		{{input id='password' placeholder='Enter Password' type='password' value=this.password class="form-control"}}
	</div>
	<BsButton type="submit" @type="primary">Login</BsButton>
</form>

{{else}}

{{!-- Sign up form --}}
<form id='signup' >
	{{#if this.errorMessage}}
	<p>{{this.errorMessage}}</p>
	{{/if}}

	<div class="form-group">
		<label for="name">Name</label>
		{{input id='name' placeholder='Tony Stark' value=this.name class="form-control"}}
	</div>
	<div class="form-group">
		<label for="email">Email</label>
		{{input id='email' placeholder='tstark@starkindustries.com' value=this.email class="form-control"}}
	</div>
	<div class="form-group">
		<label for="password">Password</label>
		{{input id='password' placeholder='Enter Password' type='password' value=this.password class="form-control"}}
	</div>
	<div class="form-group">
		<label for="password2">Retype Password</label>
		{{input id='password2' placeholder='Enter Password' type='password' value=this.password class="form-control"}}
	</div>
	<BsButton type="submit" @type="primary">Login</BsButton>
</form>

{{/if}}

{{yield}}